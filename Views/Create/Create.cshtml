@model DotaAPI.Models.New_Hero
@{
    ViewData["Title"] = "Create a Hero";
}
<form asp-controller="Create" asp-action="Submit" method="POST">
    <h3>Base Hero</h3>
    <select name="hero_id">
        <option value="0"></option>
        @{
            foreach(var x in ViewBag.heroes)
            {
                <option value="@x.id">@x.name</option>
            }
        }
    </select> <span asp-validation-for="hero_id"></span>
    <h3>Name</h3>
    <input type="text" name="name"> <span asp-validation-for="name"></span>
    <h3>Biography <span style="font-size: 10pt">(optional)</span></h3> 
    <textarea name="bio">@ViewBag.bio</textarea> <span asp-validation-for="bio"></span>
    <h3>Regular spells</h3>
    <select name="spell_1_id">
        <option value='0'></option>
        @{
            foreach(var x in ViewBag.regulars)
            {
                <option value="@x.id">@x.name</option>
            }
        }
    </select>
    <select name="spell_2_id">
        <option value='0'></option>
        @{
            foreach(var x in ViewBag.regulars)
            {
                <option value="@x.id">@x.name</option>
            }
        }
    </select>
    <select name="spell_3_id">
        <option value='0'></option>
        @{
            foreach(var x in ViewBag.regulars)
            {
                <option value="@x.id">@x.name</option>
            }
        }
    </select> <span asp-validation-for="spell_1_id"></span>
    <h3>Ultimates</h3>
    <select name="spell_4_id">
        <option value='0'></option>
        @{
            foreach(var x in ViewBag.ultimates)
            {
                <option value="@x.id">@x.name</option>
            }
        }
    </select> <span asp-validation-for="spell_4_id"></span><br><br>
    <input type="submit">
</form>